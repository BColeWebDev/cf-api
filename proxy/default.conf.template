server {
  listen $PORT default_server;

  location / {
    gzip off;
    root   /usr/share/nginx/html;
    index  index.html;
  }
      location = /status {
        resolver 127.0.0.1;
        access_log off;
        default_type text/plain;
        add_header Content-Type text/plain;
        return 200 “alive”;
    }
}